--------------------------------------------------------------------------------
-- Creator




Creator
  name Text
  userId UserId
  profileImage Text

  UniqueCreator userId
  deriving Show




--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
-- Payments

Payment
  userId   UserId Maybe
  amount   Double
  currency Text

  deriving Show



-- Donation
Dono
  paymentId PaymentId
  name      Text
  message   Text

  UniqueDono paymentId
  deriving Show



-- Subscription
Sub
  paymentId       PaymentId
  userId          UserId -- receiver
  gifter          UserId Maybe -- maybe purchaser
  tier            Int
  is3MonthPackage Bool
  message         Text
  source          Text

  --UniqueSub paymentId
  deriving Show



-- Active Subscription
ActiveSub
  userId       UserId
  subscription SubId -- Associated Subscription
  recurring    Bool
  endTime      Int

  UniqueSubber userId
  UniqueSubscription subscription
  deriving Show


-- FreeSub


--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
-- Other

BotCommands
  output
  count Int -- number of time this command has been used

--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
--------------------------------------------------------------------------------
-- Images

Image
  width Double
  height Double
  url Text
  UniqueURl url
  deriving Show




Emote
  name Text
  image ImageId
  UniqueEmoteName name
  UniqueImage image
  deriving Show




RoleBadge
  emote EmoteId
  UniqueRoleBadge emote
  deriving Show

SubBadge
  emote EmoteId
  tier Int
  monthsRequired Int
  UniqueSubBadge emote
  deriving Show

SeasonBadge
  emote EmoteId
  number Int
  UniqueSeasonBadge emote
  UniqueSeasonBadgeNumber number
  deriving Show

CommonBadge
  emote EmoteId
  UniqueBadge emote
  deriving Show

GlobalEmote
  emote EmoteId
  UniqueGlobalEmote emote
  deriving Show

SubEmote
  emote EmoteId
  UniqueSubEmote emote
  deriving Show